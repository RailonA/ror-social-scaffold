<div>
  <h2>You have <%= pluralize(current_user.friend_requests.count, 'Friend requests')%> </h2>
  <% current_user.friend_requests.each do |user|%>
    <table class="table">
      <thead>
        <tr> 
          <th scope="col"> 
            <%= link_to user_path(user) do%>
              <h2  class = 'hr'><%= user.name%></h2>
            <%end%>
          </th>  
        </tr>
      </thead>
      <tbody>
        <tr> 
          <td>
            <%= link_to 'See Profile',
            user_path(user),
            class: '' %>
          </td>
          <td>
            <%= link_to 'Accept',
              friendship_path(search_friendship(user.id, current_user.id)),
              method: :put, class: ' p1' %>
            </td>
          <td>
            <%= link_to 'Not now!',
              friendship_path(user.id),
              method: :delete, class: ' p1' %>
          </td>
        </tr>
      </tbody>
    </table>
    <hr class = 'hr'>
  <%end%>
</div>